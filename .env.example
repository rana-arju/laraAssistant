# FastAPI Configuration
DEBUG=true
ENVIRONMENT=development

# Database Configuration
MONGO_URI=mongodb://mongodb:27017/lara_assistant
MONGO_DB_NAME=lara_assistant

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# External Services
NODE_AUTH_URL=http://localhost:3000
NODE_SUBSCRIPTION_URL=http://localhost:3000

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Audio Processing
USE_OPENAI_WHISPER=true
WHISPER_MODEL=base

# Background Jobs
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]
ALLOWED_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_AUDIO_FORMATS=["audio/wav", "audio/mp3", "audio/m4a", "audio/flac"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_VOICE_CHAT=true
ENABLE_SCHEDULING=true
ENABLE_EMBEDDINGS=true